node
{
 
  stage("CheckOutCodeGit")
  {
   git branch: 'vishnu', credentialsId: 'GitHubCreds', url: 'https://github.com/nvvr53/nodejs-app-mss.git'
  }
 
 stage("Build")
  {
    nodejs(nodeJSInstallationName: 'nodejs15.3.0') {
        sh 'npm install'
      }
  }  
 
  stage('ExecuteSonarQubeReport') {
     nodejs(nodeJSInstallationName: 'nodejs15.3.0') {
        sh 'npm run sonar'
    }
  }
  
  stage('UploadintoNexus') {
       nodejs(nodeJSInstallationName: 'nodejs15.3.0') {
          sh 'npm publish'
      }
  
  stage('RunNodeJsApp')
 {
    
 nodejs(nodeJSInstallationName: 'nodejs15.3.0') {
        sh 'npm start &'
    }
}
}
}
